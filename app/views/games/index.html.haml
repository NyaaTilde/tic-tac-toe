%h1 Listing games

= link_to 'New Game', new_game_path, type: 'button', class: 'btn btn-primary', style: 'color: white'

%table.table
  %thead
    %tr
      %th Proponent
      %th Opponent
      %th Status
      %th
      %th
  %tbody
    - @games.each do |game|
      %tr
        %td= game.proponent
        %td= game.opponent
        %td
          - if game.status == 1
            In Progress
          - else
            Complete
        %td= link_to 'Show', game, type: 'button', class: 'btn btn-success btn-xs', style: 'color: white'
        %td= link_to 'Destroy', game, :method => :delete, :data => { :confirm => 'Are you sure?' }, type: 'button', class: 'btn btn-danger btn-xs', style: 'color: white'
